# Copy to .env and adjust

# Postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=app
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/app

# Backend
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
SYSTEM_PROMPT=You are a helpful assistant.

# Object storage (S3/R2 compatible)
STORAGE_BUCKET=
STORAGE_REGION=us-east-1
STORAGE_ENDPOINT=https://s3.us-east-1.amazonaws.com
STORAGE_ACCESS_KEY_ID=
STORAGE_SECRET_ACCESS_KEY=
STORAGE_FORCE_PATH_STYLE=false
STORAGE_UPLOAD_URL_EXPIRES_SECONDS=300
STORAGE_DOWNLOAD_URL_EXPIRES_SECONDS=300
STORAGE_THUMBNAIL_MAX_SIZE=512

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
